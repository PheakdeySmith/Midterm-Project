@model Category


<div class="right_col" role="main">
	<div class="">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="title_left">
						<h3>Edit Category</h3>
					</div>
				</div>
			</div>
		</div>
		<div class="clearfix"></div>
		<div class="row">
			<div class="col-md-12 col-sm-12 ">
				<div class="x_panel">
					<div class="x_content">
						<br />
						<form asp-action="Edit" method="post" asp-route-id="@Model.Id" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

							<div class="item form-group">
								<label asp-for="Name" class="col-form-label col-md-3 col-sm-3 label-align" for="name">
									Category Name <span class="required">*</span>
								</label>
								<div class="col-md-6 col-sm-6 ">
									<input type="text" id="name" asp-for="Name" required="required" class="form-control ">
								</div>
							</div>
							<div class="item form-group">
								<label asp-for="Description" class="col-form-label col-md-3 col-sm-3 label-align" for="description">
									Description <span class="required">*</span>
								</label>
								<div class="col-md-6 col-sm-6 ">
									<textarea id="description" asp-for="Description" required="required" class="form-control"></textarea>
								</div>
							</div>
							<div class="ln_solid"></div>
							<div class="item form-group">
								<div class="col-md-6 col-sm-6 offset-md-3">
									<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
									<button type="submit" class="btn btn-success">Update</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>